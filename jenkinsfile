pipeline {
    agent any
    tools {
        jdk 'JDK21'
        maven 'MVN'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: '2419ea90-96fd-4bda-b485-028c0e499382', url: 'https://github.com/surajsah544/MEVAN_PROJECT.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }
        stage('Validate') {
            steps {
                bat 'mvn validate'
            }
        }
        stage('Compile') {
            steps {
                bat 'mvn compile'
            }
        }
        stage('Install') {
            steps {
                bat 'mvn install'
            }
        }
    }
    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}

